# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_size = 4
max_line_length = 120
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = inside
indent_brace_style = K&R

# HTML files
[*.{html,htm}]
indent_size = 2
max_line_length = 120

# CSS files
[*.{css,scss,sass,less}]
indent_size = 2
max_line_length = 80

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 80
quote_type = single

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# SQL files
[*.sql]
indent_size = 4
max_line_length = 120

# XML files
[*.xml]
indent_size = 2

# Configuration files
[*.{ini,conf,config}]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_size = 2

# Batch files
[*.{cmd,bat}]
end_of_line = crlf
indent_size = 2

# Composer files
[composer.json]
indent_size = 4

# Package files
[package.json]
indent_size = 2

# Git files
[.git*]
indent_style = tab

# Makefile
[Makefile]
indent_style = tab

# Documentation files
[*.{txt,doc,pdf}]
max_line_length = 80

# Ignore paths
[/vendor/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[/node_modules/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

# Specific file overrides
[{phpunit.xml,phpunit.xml.dist}]
indent_size = 4

[.htaccess]
indent_size = 4