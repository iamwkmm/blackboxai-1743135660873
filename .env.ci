# Application
APP_NAME=OctavaDigital-CI
APP_ENV=testing
APP_KEY=base64:ci1234567890ci1234567890ci123456
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=es
APP_CURRENCY=CLP

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ci_test_db
DB_USERNAME=root
DB_PASSWORD=root
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Testing
BCRYPT_ROUNDS=4
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# Mail
MAIL_MAILER=array
MAIL_FROM_ADDRESS=ci@octavadigital.cl
MAIL_FROM_NAME="${APP_NAME} CI"

# Cache and Session
CACHE_DRIVER=array
SESSION_DRIVER=array
SESSION_LIFETIME=120

# Testing Configuration
TESTING_PARALLEL=true
TESTING_RETRY_TIMES=2
TESTING_TIMEOUT=10
TESTING_MEMORY_LIMIT=512M

# PHPUnit
XDEBUG_MODE=coverage
COVERAGE_ENABLED=true
TEST_COVERAGE_HTML_REPORT=true
TEST_COVERAGE_CLOVER_REPORT=true
COVERAGE_MINIMUM=80

# Browser Testing
DUSK_HEADLESS=true
DUSK_DRIVER=chrome
DUSK_WIDTH=1920
DUSK_HEIGHT=1080
DUSK_ELEMENTS_TIMEOUT=10
DUSK_PAGE_TIMEOUT=30

# Security (Disabled for CI)
API_THROTTLE=0,1
PASSWORD_TIMEOUT=0
SESSION_SECURE_COOKIE=false
ENABLE_CSRF=false

# Paths
STORAGE_PATH=/tmp/ci/storage
PUBLIC_PATH=/tmp/ci/public
UPLOAD_PATH=/tmp/ci/uploads
LOG_PATH=/tmp/ci/logs
COVERAGE_PATH=/tmp/ci/coverage

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null
LOG_QUERIES=true
LOG_SLOW_QUERIES=true

# Mock Services
STRIPE_KEY=pk_test_ci
STRIPE_SECRET=sk_test_ci
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=ci_client_id
PAYPAL_CLIENT_SECRET=ci_client_secret

# Features (Minimal for Testing)
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_API=true

# Development Tools (Disabled)
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false
QUERY_DETECTOR_ENABLED=false

# Asset Compilation
ASSET_URL=http://localhost:8000
MIX_ASSET_URL="${ASSET_URL}"
NODE_ENV=test
VITE_TEST=true

# Test Data
TEST_USER_EMAIL=test@octavadigital.cl
TEST_USER_PASSWORD=password
TEST_ADMIN_EMAIL=admin@octavadigital.cl
TEST_ADMIN_PASSWORD=password

# CI Specific
CI=true
CI_ENVIRONMENT=testing
CI_BUILD_NUMBER=${CI_BUILD_NUMBER}
CI_BUILD_URL=${CI_BUILD_URL}
CI_COMMIT_SHA=${CI_COMMIT_SHA}
CI_BRANCH=${CI_BRANCH}

# Test Database Seeding
SEED_TEST_DATA=true
SEED_ADMIN_EMAIL=admin@octavadigital.cl
SEED_ADMIN_PASSWORD=password

# Performance
OPTIMIZE_IMAGES=false
COMPRESS_OUTPUT=false
MINIFY_HTML=false
ASSET_VERSIONING=false

# Error Reporting
DISPLAY_ERROR_DETAILS=true
ERROR_REPORTING=-1
DISPLAY_STARTUP_ERRORS=true

# Memory Limits
MEMORY_LIMIT=512M
MAX_EXECUTION_TIME=300
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=10M

# Test Timeouts
SETUP_TIMEOUT=30
TEST_TIMEOUT=60
TEARDOWN_TIMEOUT=30

# Test Retries
RETRY_TIMES=2
RETRY_SLEEP=1000

# Database Cleanup
DB_CLEANUP=true
TRUNCATE_TABLES=true
PRESERVE_TEST_DATABASE=false

# Mock External Services
MOCK_EXTERNAL_SERVICES=true
MOCK_PAYMENT_GATEWAY=true
MOCK_EMAIL_SERVICE=true
MOCK_SMS_SERVICE=true

# Test Output
GENERATE_COVERAGE_BADGE=true
COVERAGE_BADGE_PATH=/tmp/ci/coverage/badge.svg
TEST_OUTPUT_DIR=/tmp/ci/test-results
JUNIT_REPORT_PATH=/tmp/ci/test-results/junit.xml