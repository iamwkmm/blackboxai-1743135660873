# Demo Application
APP_NAME=OctavaDigital-Demo
APP_ENV=demo
APP_KEY=base64:demo123456789demo123456789demo1234
APP_DEBUG=false
APP_URL=https://demo.octavadigital.cl
APP_TIMEZONE=America/Santiago
APP_LOCALE=es
APP_CURRENCY=CLP

# Demo Database (Read-only)
DB_CONNECTION=mysql
DB_HOST=demo-db.octavadigital.cl
DB_PORT=3306
DB_DATABASE=demo_octavadigital
DB_USERNAME=demo_readonly
DB_PASSWORD=demo_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Demo Redis
REDIS_HOST=demo-redis.octavadigital.cl
REDIS_PASSWORD=demo_redis_password
REDIS_PORT=6379
REDIS_DB=0

# Demo Mail (Catch-all)
MAIL_MAILER=array
MAIL_FROM_ADDRESS=demo@octavadigital.cl
MAIL_FROM_NAME="${APP_NAME} Demo"

# Demo Storage
AWS_ACCESS_KEY_ID=demo_aws_key
AWS_SECRET_ACCESS_KEY=demo_aws_secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=demo-octavadigital
AWS_URL=https://demo-cdn.octavadigital.cl
AWS_ENDPOINT=https://s3.us-east-1.amazonaws.com
AWS_USE_PATH_STYLE_ENDPOINT=false

# Session and Security
SESSION_DRIVER=redis
SESSION_LIFETIME=60
SESSION_SECURE_COOKIE=true
SESSION_DOMAIN=.demo.octavadigital.cl
SANCTUM_STATEFUL_DOMAINS=demo.octavadigital.cl

# Cache and Queue
CACHE_DRIVER=redis
QUEUE_CONNECTION=sync
BROADCAST_DRIVER=log
FILESYSTEM_DISK=s3

# Demo Payment Gateways (Test Mode)
STRIPE_KEY=pk_test_demo
STRIPE_SECRET=sk_test_demo
PAYPAL_CLIENT_ID=demo_paypal_id
PAYPAL_CLIENT_SECRET=demo_paypal_secret
PAYPAL_MODE=sandbox

# Demo Features
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_API=true

# Demo Restrictions
DEMO_MODE=true
DEMO_EXPIRES_AT="+24 hours"
DEMO_MAX_UPLOAD_SIZE=2048
DEMO_MAX_REQUESTS=1000
DEMO_RESET_INTERVAL=3600

# Demo Accounts
DEMO_USER_EMAIL=demo@octavadigital.cl
DEMO_USER_PASSWORD=demo123
DEMO_ADMIN_EMAIL=demo.admin@octavadigital.cl
DEMO_ADMIN_PASSWORD=demo123

# Demo Paths
STORAGE_PATH=/var/www/demo/storage
PUBLIC_PATH=/var/www/demo/public
UPLOAD_PATH=/var/www/demo/uploads
LOG_PATH=/var/www/demo/logs

# Demo Security
PASSWORD_TIMEOUT=3600
API_THROTTLE=30,1
ENABLE_CSRF=true
CORS_ALLOWED_ORIGINS=https://demo.octavadigital.cl

# Demo Monitoring
SENTRY_LARAVEL_DSN=https://demo@sentry.octavadigital.cl/123
SENTRY_TRACES_SAMPLE_RATE=0.5
NEW_RELIC_LICENSE_KEY=demo_newrelic_key
NEW_RELIC_APP_NAME="Octava Digital Demo"

# Demo API
API_DEBUG=false
API_STRICT=true
API_DOMAIN=api.demo.octavadigital.cl
API_PREFIX=api
API_VERSION=v1
API_NAME="Octava Digital API (Demo)"

# Demo Optimization
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_LIFETIME=3600
MINIFY_HTML=true
ASSET_VERSIONING=true
COMPRESS_OUTPUT=true

# Demo Restrictions
MAX_ITEMS_PER_USER=10
MAX_STORAGE_PER_USER=100
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf"
MAX_FILE_SIZE=2048

# Demo Cleanup
AUTO_CLEANUP_ENABLED=true
CLEANUP_INTERVAL=86400
PRESERVE_DEMO_DATA=false
MAX_DEMO_AGE=86400

# Demo Notice
DEMO_NOTICE=true
DEMO_NOTICE_TEXT="ðŸŽ¯ Demo Environment - Data resets every 24 hours"
DEMO_BANNER_TEXT="Demo Version - Limited Functionality"
DEMO_WATERMARK=true

# Demo Analytics
DEMO_ANALYTICS_ENABLED=true
TRACK_DEMO_USAGE=true
USAGE_METRICS_PATH=/var/www/demo/metrics
DEMO_FEEDBACK_ENABLED=true

# Demo Limitations
DISABLED_FEATURES="delete,export,import,email,sms"
READ_ONLY_MODELS="settings,configurations,templates"
RESTRICTED_ROUTES="admin/settings,admin/users,admin/system"

# Demo Reset
DEMO_RESET_ENABLED=true
RESET_SCHEDULE="0 0 * * *"
RESET_NOTIFICATION_EMAIL=demo.admin@octavadigital.cl
PRESERVE_UPLOADED_FILES=false

# Demo Support
DEMO_SUPPORT_EMAIL=demo.support@octavadigital.cl
DEMO_FEEDBACK_URL=https://demo.octavadigital.cl/feedback
DEMO_DOCUMENTATION_URL=https://docs.octavadigital.cl/demo
DEMO_HELP_ENABLED=true

# Demo Performance
DEMO_CACHE_TTL=3600
DEMO_QUERY_LIMIT=100
DEMO_REQUEST_TIMEOUT=30
DEMO_SLOW_QUERY_LOG=1000