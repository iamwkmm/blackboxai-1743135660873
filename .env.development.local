# Local Development Overrides
# WARNING: This file should not be committed to version control
# It contains personal development settings and sensitive information

# Application
APP_NAME=OctavaDigital-DevLocal
APP_ENV=development
APP_KEY=base64:local123456789local123456789local12
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=America/Santiago
APP_LOCALE=es

# Personal Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=my_local_db
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Local Redis (Optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Local Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS=dev@localhost
MAIL_FROM_NAME="${APP_NAME} Local"

# Local Paths
STORAGE_PATH=./storage
PUBLIC_PATH=./public
UPLOAD_PATH=./storage/uploads
LOG_PATH=./storage/logs

# Development Tools
DEBUGBAR_ENABLED=true
TELESCOPE_ENABLED=true
QUERY_DETECTOR_ENABLED=true
IGNITION_EDITOR=vscode

# Personal IDE Settings
IDE_HELPER_GENERATE=true
IDE_HELPER_MODEL=true
XDEBUG_ENABLED=true
XDEBUG_PORT=9003

# Local Testing
PHP_UNIT_CACHE_RESULT=true
DUSK_HEADLESS=false
BROWSER_NAME=chrome
SCREENSHOT_PATH=./tests/Browser/screenshots

# Personal API Keys (Development/Test accounts)
STRIPE_KEY=pk_test_my_key
STRIPE_SECRET=sk_test_my_secret
GITHUB_TOKEN=my_personal_token
NPM_TOKEN=my_npm_token

# Local Development Server
DEV_SERVER_PORT=8000
DEV_SERVER_HOST=localhost
HOT_RELOAD=true
VITE_PORT=5173

# Personal AWS (Optional)
AWS_ACCESS_KEY_ID=my_aws_key
AWS_SECRET_ACCESS_KEY=my_aws_secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=my-local-bucket

# Cache Settings
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync
BROADCAST_DRIVER=log

# Debug Settings
LOG_LEVEL=debug
LOG_QUERIES=true
LOG_SLOW_QUERIES=true
SLOW_QUERY_TIME=100

# Personal Test Accounts
TEST_USER_EMAIL=mytest@localhost
TEST_USER_PASSWORD=password
TEST_ADMIN_EMAIL=myadmin@localhost
TEST_ADMIN_PASSWORD=password

# Docker Settings (Optional)
DOCKER_NGINX_PORT=8080
DOCKER_MYSQL_PORT=3307
DOCKER_REDIS_PORT=6380
DOCKER_MAILHOG_PORT=8025

# Node Settings
NODE_ENV=development
NPM_REGISTRY=https://registry.npmjs.org/
YARN_REGISTRY=https://registry.yarnpkg.com

# Git Settings
GIT_USER_NAME="Your Name"
GIT_USER_EMAIL="your.email@example.com"

# Browser Testing
CHROME_PATH=/usr/bin/google-chrome
FIREFOX_PATH=/usr/bin/firefox
BROWSER_TIMEOUT=30000

# Personal Workspace
WORKSPACE_PATH=/home/username/projects
BACKUP_PATH=/home/username/backups
TEMP_PATH=/home/username/temp

# Development Features
ENABLE_FAKE_DATA=true
ENABLE_MOCK_SERVICES=true
ENABLE_TEST_ROUTES=true
SKIP_MIGRATIONS=false

# Performance
OPTIMIZE_LOCAL=false
MINIFY_LOCAL=false
SOURCE_MAPS=true
GENERATE_DOCS=true

# Local Security (Relaxed)
SESSION_SECURE_COOKIE=false
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Development Notice
LOCAL_NOTICE=true
LOCAL_NOTICE_TEXT="üõ†Ô∏è Personal Development Environment"

# Personal Preferences
PREFERRED_EDITOR=vscode
PREFERRED_TERMINAL=iterm2
COLOR_SCHEME=dark
AUTO_OPEN_BROWSER=true

# Local Tools
PHP_CS_FIXER_PATH=./vendor/bin/php-cs-fixer
PHPSTAN_PATH=./vendor/bin/phpstan
PSALM_PATH=./vendor/bin/psalm

# Debugging
SQL_DEBUG=true
ROUTE_DEBUG=true
EVENT_DEBUG=true
CACHE_DEBUG=true
MAIL_DEBUG=true

# Local SSL (Optional)
SSL_CERTIFICATE_PATH=~/.ssl/localhost.crt
SSL_CERTIFICATE_KEY_PATH=~/.ssl/localhost.key