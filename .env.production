# Application
APP_NAME=OctavaDigital
APP_ENV=production
APP_KEY=${SECURE_APP_KEY}
APP_DEBUG=false
APP_URL=https://www.octavadigital.cl
APP_TIMEZONE=America/Santiago
APP_LOCALE=es
APP_CURRENCY=CLP

# Database
DB_CONNECTION=mysql
DB_HOST=${DB_PROD_HOST}
DB_PORT=3306
DB_DATABASE=${DB_PROD_NAME}
DB_USERNAME=${DB_PROD_USER}
DB_PASSWORD=${DB_PROD_PASSWORD}
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Redis
REDIS_HOST=${REDIS_PROD_HOST}
REDIS_PASSWORD=${REDIS_PROD_PASSWORD}
REDIS_PORT=6379
REDIS_DB=0

# Mail
MAIL_MAILER=smtp
MAIL_HOST=${SMTP_HOST}
MAIL_PORT=587
MAIL_USERNAME=${SMTP_USERNAME}
MAIL_PASSWORD=${SMTP_PASSWORD}
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@octavadigital.cl
MAIL_FROM_NAME="${APP_NAME}"

# AWS Production
AWS_ACCESS_KEY_ID=${AWS_PROD_KEY}
AWS_SECRET_ACCESS_KEY=${AWS_PROD_SECRET}
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=${AWS_PROD_BUCKET}
AWS_URL=https://${AWS_PROD_BUCKET}.s3.amazonaws.com
AWS_ENDPOINT=https://s3.us-east-1.amazonaws.com
AWS_USE_PATH_STYLE_ENDPOINT=false

# Session and Security
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_DOMAIN=.octavadigital.cl
SANCTUM_STATEFUL_DOMAINS=octavadigital.cl,*.octavadigital.cl

# Cache and Queue
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
BROADCAST_DRIVER=pusher
FILESYSTEM_DISK=s3

# Production API Keys
GOOGLE_ANALYTICS_ID=${GA_PROD_ID}
GOOGLE_MAPS_KEY=${GMAPS_PROD_KEY}
RECAPTCHA_SITE_KEY=${RECAPTCHA_PROD_SITE}
RECAPTCHA_SECRET_KEY=${RECAPTCHA_PROD_SECRET}

# Production Social Media
FACEBOOK_APP_ID=${FB_PROD_ID}
FACEBOOK_APP_SECRET=${FB_PROD_SECRET}
TWITTER_API_KEY=${TWITTER_PROD_KEY}
TWITTER_API_SECRET=${TWITTER_PROD_SECRET}
INSTAGRAM_CLIENT_ID=${IG_PROD_ID}
INSTAGRAM_CLIENT_SECRET=${IG_PROD_SECRET}

# Production Payment Gateways
STRIPE_KEY=${STRIPE_PROD_KEY}
STRIPE_SECRET=${STRIPE_PROD_SECRET}
PAYPAL_CLIENT_ID=${PAYPAL_PROD_ID}
PAYPAL_CLIENT_SECRET=${PAYPAL_PROD_SECRET}
PAYPAL_MODE=live

# Production Features
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_API=true

# Production Tools
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false
QUERY_DETECTOR_ENABLED=false
IGNITION_EDITOR=null

# Production Optimization
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_LIFETIME=3600
MINIFY_HTML=true
ASSET_VERSIONING=true
COMPRESS_OUTPUT=true

# Production Security
PASSWORD_TIMEOUT=3600
API_THROTTLE=60,1
ENABLE_CSRF=true
CORS_ALLOWED_ORIGINS=https://octavadigital.cl,https://*.octavadigital.cl

# Production Search
ALGOLIA_APP_ID=${ALGOLIA_PROD_ID}
ALGOLIA_SECRET=${ALGOLIA_PROD_SECRET}
ELASTICSEARCH_HOST=${ES_PROD_HOST}
ELASTICSEARCH_PORT=9200

# Production Paths
STORAGE_PATH=/var/www/storage
PUBLIC_PATH=/var/www/public
UPLOAD_PATH=/var/www/uploads
LOG_PATH=/var/www/logs

# Production WebSocket
PUSHER_APP_ID=${PUSHER_PROD_ID}
PUSHER_APP_KEY=${PUSHER_PROD_KEY}
PUSHER_APP_SECRET=${PUSHER_PROD_SECRET}
PUSHER_HOST=null
PUSHER_PORT=443
PUSHER_SCHEME=https

# Production Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
LOG_QUERIES=false
LOG_SLOW_QUERIES=true
SLOW_QUERY_TIME=1000

# Production Assets
ASSET_URL=https://cdn.octavadigital.cl
MIX_ASSET_URL="${ASSET_URL}"
CDN_URL=https://cdn.octavadigital.cl
SOURCE_MAPS=false

# Production Admin
ADMIN_PATH=${SECURE_ADMIN_PATH}
ADMIN_THEME=default
ADMIN_LANGUAGE=es
ADMIN_NOTIFICATIONS_ENABLED=true

# Production API
API_DEBUG=false
API_STRICT=true
API_DOMAIN=api.octavadigital.cl
API_PREFIX=api
API_VERSION=v1
API_NAME="Octava Digital API"

# Production Cache
CACHE_PREFIX=octavadigital_prod_
CACHE_TTL=3600
QUEUE_TIMEOUT=90
QUEUE_RETRY_AFTER=90

# Production Media
MAX_UPLOAD_SIZE=5120
IMAGE_DRIVER=gd
IMAGE_QUALITY=85
THUMBNAIL_SIZE=300

# Production Monitoring
SENTRY_LARAVEL_DSN=${SENTRY_PROD_DSN}
SENTRY_TRACES_SAMPLE_RATE=0.1
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_KEY}
NEW_RELIC_APP_NAME="Octava Digital"

# Production Security Headers
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains; preload
CONTENT_SECURITY_POLICY=default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' data: https:;
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin