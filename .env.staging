# Application
APP_NAME=OctavaDigital-Staging
APP_ENV=staging
APP_KEY=${STAGING_APP_KEY}
APP_DEBUG=true
APP_URL=https://staging.octavadigital.cl
APP_TIMEZONE=America/Santiago
APP_LOCALE=es
APP_CURRENCY=CLP

# Database
DB_CONNECTION=mysql
DB_HOST=${DB_STAGING_HOST}
DB_PORT=3306
DB_DATABASE=${DB_STAGING_NAME}
DB_USERNAME=${DB_STAGING_USER}
DB_PASSWORD=${DB_STAGING_PASSWORD}
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Redis
REDIS_HOST=${REDIS_STAGING_HOST}
REDIS_PASSWORD=${REDIS_STAGING_PASSWORD}
REDIS_PORT=6379
REDIS_DB=0

# Mail
MAIL_MAILER=smtp
MAIL_HOST=${SMTP_STAGING_HOST}
MAIL_PORT=587
MAIL_USERNAME=${SMTP_STAGING_USERNAME}
MAIL_PASSWORD=${SMTP_STAGING_PASSWORD}
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=staging@octavadigital.cl
MAIL_FROM_NAME="${APP_NAME} Staging"

# AWS Staging
AWS_ACCESS_KEY_ID=${AWS_STAGING_KEY}
AWS_SECRET_ACCESS_KEY=${AWS_STAGING_SECRET}
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=${AWS_STAGING_BUCKET}
AWS_URL=https://${AWS_STAGING_BUCKET}.s3.amazonaws.com
AWS_ENDPOINT=https://s3.us-east-1.amazonaws.com
AWS_USE_PATH_STYLE_ENDPOINT=false

# Session and Security
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_DOMAIN=.staging.octavadigital.cl
SANCTUM_STATEFUL_DOMAINS=staging.octavadigital.cl,*.staging.octavadigital.cl

# Cache and Queue
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
BROADCAST_DRIVER=pusher
FILESYSTEM_DISK=s3

# Staging API Keys
GOOGLE_ANALYTICS_ID=${GA_STAGING_ID}
GOOGLE_MAPS_KEY=${GMAPS_STAGING_KEY}
RECAPTCHA_SITE_KEY=${RECAPTCHA_STAGING_SITE}
RECAPTCHA_SECRET_KEY=${RECAPTCHA_STAGING_SECRET}

# Staging Social Media
FACEBOOK_APP_ID=${FB_STAGING_ID}
FACEBOOK_APP_SECRET=${FB_STAGING_SECRET}
TWITTER_API_KEY=${TWITTER_STAGING_KEY}
TWITTER_API_SECRET=${TWITTER_STAGING_SECRET}
INSTAGRAM_CLIENT_ID=${IG_STAGING_ID}
INSTAGRAM_CLIENT_SECRET=${IG_STAGING_SECRET}

# Staging Payment Gateways
STRIPE_KEY=${STRIPE_STAGING_KEY}
STRIPE_SECRET=${STRIPE_STAGING_SECRET}
PAYPAL_CLIENT_ID=${PAYPAL_STAGING_ID}
PAYPAL_CLIENT_SECRET=${PAYPAL_STAGING_SECRET}
PAYPAL_MODE=sandbox

# Staging Features
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_API=true

# Staging Tools
DEBUGBAR_ENABLED=true
TELESCOPE_ENABLED=true
QUERY_DETECTOR_ENABLED=true
IGNITION_EDITOR=vscode

# Staging Optimization
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_LIFETIME=60
MINIFY_HTML=true
ASSET_VERSIONING=true
COMPRESS_OUTPUT=true

# Staging Security
PASSWORD_TIMEOUT=7200
API_THROTTLE=120,1
ENABLE_CSRF=true
CORS_ALLOWED_ORIGINS=https://staging.octavadigital.cl,https://*.staging.octavadigital.cl

# Staging Search
ALGOLIA_APP_ID=${ALGOLIA_STAGING_ID}
ALGOLIA_SECRET=${ALGOLIA_STAGING_SECRET}
ELASTICSEARCH_HOST=${ES_STAGING_HOST}
ELASTICSEARCH_PORT=9200

# Staging Paths
STORAGE_PATH=/var/www/staging/storage
PUBLIC_PATH=/var/www/staging/public
UPLOAD_PATH=/var/www/staging/uploads
LOG_PATH=/var/www/staging/logs

# Staging WebSocket
PUSHER_APP_ID=${PUSHER_STAGING_ID}
PUSHER_APP_KEY=${PUSHER_STAGING_KEY}
PUSHER_APP_SECRET=${PUSHER_STAGING_SECRET}
PUSHER_HOST=null
PUSHER_PORT=443
PUSHER_SCHEME=https

# Staging Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_QUERIES=true
LOG_SLOW_QUERIES=true
SLOW_QUERY_TIME=500

# Staging Assets
ASSET_URL=https://staging-cdn.octavadigital.cl
MIX_ASSET_URL="${ASSET_URL}"
CDN_URL=https://staging-cdn.octavadigital.cl
SOURCE_MAPS=true

# Staging Admin
ADMIN_PATH=admin-staging
ADMIN_THEME=default
ADMIN_LANGUAGE=es
ADMIN_NOTIFICATIONS_ENABLED=true

# Staging API
API_DEBUG=true
API_STRICT=true
API_DOMAIN=api.staging.octavadigital.cl
API_PREFIX=api
API_VERSION=v1
API_NAME="Octava Digital API (Staging)"

# Staging Cache
CACHE_PREFIX=octavadigital_staging_
CACHE_TTL=1800
QUEUE_TIMEOUT=90
QUEUE_RETRY_AFTER=90

# Staging Media
MAX_UPLOAD_SIZE=10240
IMAGE_DRIVER=gd
IMAGE_QUALITY=85
THUMBNAIL_SIZE=300

# Staging Monitoring
SENTRY_LARAVEL_DSN=${SENTRY_STAGING_DSN}
SENTRY_TRACES_SAMPLE_RATE=1.0
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_STAGING_KEY}
NEW_RELIC_APP_NAME="Octava Digital Staging"

# Staging Security Headers
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains
CONTENT_SECURITY_POLICY=default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' data: https:;
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin

# Staging Notice
STAGING_NOTICE=true
STAGING_NOTICE_TEXT="⚠️ This is a staging environment. Do not use real credentials or sensitive data."