# Application Testing Environment
APP_NAME=OctavaDigital-Testing
APP_ENV=testing
APP_KEY=base64:test123456789test123456789test12345
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=es
APP_CURRENCY=CLP

# Testing Database (Using SQLite for speed)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:
DB_FOREIGN_KEYS=true

# Fast Password Hashing
BCRYPT_ROUNDS=4

# Testing Drivers (Using array drivers for speed)
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync
BROADCAST_DRIVER=null
FILESYSTEM_DISK=local
MAIL_MAILER=array

# PHPUnit Settings
XDEBUG_MODE=coverage
COVERAGE_ENABLED=true
TEST_COVERAGE_HTML_REPORT=true
TEST_COVERAGE_CLOVER_REPORT=true
COVERAGE_MINIMUM=80
COVERAGE_PATH=/tmp/coverage

# Testing Paths
STORAGE_PATH=/tmp/testing/storage
PUBLIC_PATH=/tmp/testing/public
UPLOAD_PATH=/tmp/testing/uploads
LOG_PATH=/tmp/testing/logs
TEMP_PATH=/tmp/testing/temp

# Browser Testing
DUSK_HEADLESS=true
DUSK_DRIVER=chrome
DUSK_WIDTH=1920
DUSK_HEIGHT=1080
DUSK_ELEMENTS_TIMEOUT=10
DUSK_PAGE_TIMEOUT=30

# Test Data
TEST_USER_EMAIL=test@octavadigital.cl
TEST_USER_PASSWORD=password
TEST_ADMIN_EMAIL=admin@octavadigital.cl
TEST_ADMIN_PASSWORD=password

# Testing Configuration
TESTING_PARALLEL=true
TESTING_RETRY_TIMES=2
TESTING_TIMEOUT=10
TESTING_MEMORY_LIMIT=512M

# Disable Security Features
API_THROTTLE=0,1
PASSWORD_TIMEOUT=0
SESSION_SECURE_COOKIE=false
ENABLE_CSRF=false
SANCTUM_STATEFUL_DOMAINS=localhost

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=debug
LOG_QUERIES=true
LOG_SLOW_QUERIES=true
SLOW_QUERY_TIME=100

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_API=true

# Disable Development Tools
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false
QUERY_DETECTOR_ENABLED=false

# Mock External Services
STRIPE_KEY=pk_test_mock
STRIPE_SECRET=sk_test_mock
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=mock_client_id
PAYPAL_CLIENT_SECRET=mock_client_secret

# Test Database Seeding
SEED_TEST_DATA=true
SEED_ADMIN_EMAIL=admin@octavadigital.cl
SEED_ADMIN_PASSWORD=password

# Test Output Configuration
TEST_OUTPUT_DIR=/tmp/test-results
JUNIT_REPORT_PATH=/tmp/test-results/junit.xml
TESTDOX_HTML_PATH=/tmp/test-results/testdox.html
TESTDOX_TEXT_PATH=/tmp/test-results/testdox.txt

# Error Reporting
DISPLAY_ERROR_DETAILS=true
ERROR_REPORTING=-1
DISPLAY_STARTUP_ERRORS=true

# Test Timeouts
SETUP_TIMEOUT=30
TEST_TIMEOUT=60
TEARDOWN_TIMEOUT=30

# Test Retries
RETRY_TIMES=2
RETRY_SLEEP=1000

# Database Cleanup
DB_CLEANUP=true
TRUNCATE_TABLES=true
PRESERVE_TEST_DATABASE=false

# Mock Services
MOCK_EXTERNAL_SERVICES=true
MOCK_PAYMENT_GATEWAY=true
MOCK_EMAIL_SERVICE=true
MOCK_SMS_SERVICE=true

# Performance Settings
OPTIMIZE_IMAGES=false
COMPRESS_OUTPUT=false
MINIFY_HTML=false
ASSET_VERSIONING=false

# Test Environment Notice
TEST_NOTICE=true
TEST_NOTICE_TEXT="⚠️ Testing Environment - Do not use real credentials"

# Memory Settings
MEMORY_LIMIT=512M
MAX_EXECUTION_TIME=300
UPLOAD_MAX_FILESIZE=10M
POST_MAX_SIZE=10M

# Test Coverage Settings
COVERAGE_REPORT_HTML=true
COVERAGE_REPORT_CLOVER=true
COVERAGE_REPORT_TEXT=true
COVERAGE_REPORT_PHP=true
COVERAGE_FILTER_PATHS="app,src"
COVERAGE_EXCLUDE_PATHS="tests,vendor,config"