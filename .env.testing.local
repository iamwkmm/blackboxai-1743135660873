# Testing Local Overrides
# Personal testing configuration - DO NOT COMMIT

# Application
APP_NAME=OctavaDigital-TestingLocal
APP_ENV=testing
APP_KEY=base64:test123456789test123456789testlocal
APP_DEBUG=true
APP_URL=http://testing.local.octavadigital.cl

# Testing Database (SQLite Memory)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:
DB_FOREIGN_KEYS=true

# Fast Password Hashing
BCRYPT_ROUNDS=4

# Testing Drivers (Array for speed)
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync
MAIL_MAILER=array
BROADCAST_DRIVER=null
FILESYSTEM_DISK=local

# Personal Testing Paths
STORAGE_PATH=./storage/testing
PUBLIC_PATH=./public/testing
UPLOAD_PATH=./storage/testing/uploads
LOG_PATH=./storage/testing/logs
COVERAGE_PATH=./storage/testing/coverage

# PHPUnit Configuration
PHPUNIT_CACHE_RESULT=true
PHPUNIT_STOP_ON_FAILURE=false
PHPUNIT_STOP_ON_ERROR=false
PHPUNIT_TESTDOX=true

# Coverage Settings
XDEBUG_MODE=coverage
COVERAGE_ENABLED=true
COVERAGE_HTML=true
COVERAGE_CLOVER=true
COVERAGE_MINIMUM=80

# Personal Test Suites
TEST_SUITE=unit,feature,integration
SKIP_TESTS=""
FOCUS_TESTS=""
TEST_GROUP=""

# Browser Testing
DUSK_HEADLESS=true
DUSK_DRIVER=chrome
DUSK_WIDTH=1920
DUSK_HEIGHT=1080
DUSK_ELEMENTS_TIMEOUT=10
DUSK_PAGE_TIMEOUT=30

# Personal Test Accounts
TEST_USER_EMAIL=my.test@octavadigital.cl
TEST_USER_PASSWORD=test123
TEST_ADMIN_EMAIL=my.test.admin@octavadigital.cl
TEST_ADMIN_PASSWORD=test123

# Testing Configuration
TESTING_PARALLEL=true
TESTING_RETRY_TIMES=2
TESTING_TIMEOUT=10
TESTING_MEMORY_LIMIT=512M

# Mock Services
MOCK_EXTERNAL_SERVICES=true
MOCK_PAYMENT_GATEWAY=true
MOCK_EMAIL_SERVICE=true
MOCK_SMS_SERVICE=true

# Test Output
TEST_OUTPUT_DIR=./storage/testing/results
JUNIT_REPORT_PATH=./storage/testing/junit.xml
TESTDOX_HTML_PATH=./storage/testing/testdox.html
TESTDOX_TEXT_PATH=./storage/testing/testdox.txt

# Personal Development Tools
IDE_HELPER_GENERATE=true
IDE_HELPER_MODEL=true
XDEBUG_ENABLED=true
XDEBUG_PORT=9003

# Test Browser Paths
CHROME_BINARY_PATH=/usr/bin/google-chrome
FIREFOX_BINARY_PATH=/usr/bin/firefox
SCREENSHOT_PATH=./storage/testing/screenshots
CONSOLE_LOG_PATH=./storage/testing/console

# Test Performance
SLOW_TEST_THRESHOLD=1000
MEMORY_LIMIT=512M
MAX_EXECUTION_TIME=300

# Test Database Seeding
SEED_TEST_DATA=true
PRESERVE_TEST_DATABASE=false
TRUNCATE_TABLES=true
DB_CLEANUP=true

# Test Logging
LOG_CHANNEL=single
LOG_LEVEL=debug
QUERY_LOG=true
EVENT_LOG=true

# Personal Notifications
NOTIFY_ON_FAILURE=true
NOTIFY_ON_SUCCESS=false
NOTIFICATION_EMAIL=my.test@octavadigital.cl
SLACK_WEBHOOK=https://hooks.slack.com/services/my-test-hook

# Test Clean Up
CLEANUP_TEST_FILES=true
CLEANUP_AFTER_TESTS=true
PRESERVE_ERROR_SCREENSHOTS=true

# Personal Docker Testing
TEST_DOCKER_NETWORK=test_network
TEST_DOCKER_VOLUME=test_volume
SELENIUM_HOST=selenium
SELENIUM_PORT=4444

# Test Reports
GENERATE_TEST_REPORT=true
REPORT_FORMAT=html,text
REPORT_DESTINATION=./storage/testing/reports

# Test Timeouts
SETUP_TIMEOUT=30
TEST_TIMEOUT=60
TEARDOWN_TIMEOUT=30

# Test Retries
RETRY_TIMES=2
RETRY_SLEEP=1000

# Personal Development Tools
DEBUG_QUERIES=true
DEBUG_EVENTS=true
DEBUG_CACHE=true
DEBUG_TESTS=true

# Test Environment Notice
TEST_NOTICE=true
TEST_NOTICE_TEXT="ðŸ§ª Personal Testing Environment"

