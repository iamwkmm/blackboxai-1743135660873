# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Source code
*.css text diff=css
*.htm text diff=html
*.html text diff=html
*.js text
*.jsx text
*.ts text
*.tsx text
*.json text
*.php text diff=php
*.py text diff=python
*.rb text diff=ruby
*.sass text
*.scss text diff=css
*.less text
*.sql text
*.xml text
*.yml text
*.yaml text

# Documentation
*.md text diff=markdown
*.mdx text diff=markdown
*.tex text diff=tex
*.doc binary
*.docx binary
*.pdf binary
*.rtf binary

# Graphics
*.ai binary
*.bmp binary
*.eps binary
*.gif binary
*.ico binary
*.jng binary
*.jp2 binary
*.jpg binary
*.jpeg binary
*.jpx binary
*.png binary
*.psb binary
*.psd binary
*.svg text
*.svgz binary
*.tif binary
*.tiff binary
*.wbmp binary
*.webp binary

# Audio
*.kar binary
*.m4a binary
*.mid binary
*.midi binary
*.mp3 binary
*.ogg binary
*.ra binary
*.wav binary

# Video
*.3gpp binary
*.3gp binary
*.as binary
*.asf binary
*.asx binary
*.avi binary
*.fla binary
*.flv binary
*.m4v binary
*.mng binary
*.mov binary
*.mp4 binary
*.mpeg binary
*.mpg binary
*.ogv binary
*.swc binary
*.swf binary
*.webm binary

# Fonts
*.ttf binary
*.eot binary
*.otf binary
*.woff binary
*.woff2 binary

# Scripts
*.bash text eol=lf
*.fish text eol=lf
*.sh text eol=lf
*.zsh text eol=lf
# These are explicitly windows files and should use crlf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Serialisation
*.json text
*.toml text
*.xml text
*.yaml text
*.yml text

# Archives
*.7z binary
*.gz binary
*.jar binary
*.rar binary
*.tar binary
*.zip binary

# Text files where line endings should be preserved
*.patch -text

# Export ignore
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore
.editorconfig export-ignore
.eslintignore export-ignore
.eslintrc export-ignore
.prettierignore export-ignore
.prettierrc export-ignore
.stylelintignore export-ignore
.stylelintrc export-ignore
.travis.yml export-ignore
.github export-ignore
.husky export-ignore

# Linguist language overrides
*.css linguist-language=CSS
*.js linguist-language=JavaScript
*.jsx linguist-language=JavaScript
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript
*.php linguist-language=PHP

# Mark generated files
package-lock.json linguist-generated=true
yarn.lock linguist-generated=true
composer.lock linguist-generated=true
*.min.js linguist-generated=true
*.min.css linguist-generated=true

# Mark vendored files
vendor/* linguist-vendored
node_modules/* linguist-vendored
bower_components/* linguist-vendored

# Mark documentation
docs/* linguist-documentation
*.md linguist-documentation
LICENSE linguist-documentation

# Merge strategies
package-lock.json merge=npm-merge-driver
yarn.lock merge=yarn-merge-driver
composer.lock merge=composer-merge-driver